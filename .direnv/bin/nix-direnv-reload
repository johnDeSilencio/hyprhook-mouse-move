#!/usr/bin/env bash
set -e
if [[ ! -d "/home/nicholas/Documents/Rust/hyprhook-mouse-move" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/home/nicholas/Documents/Rust/hyprhook-mouse-move")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/home/nicholas/Documents/Rust/hyprhook-mouse-move" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/home/nicholas/Documents/Rust/hyprhook-mouse-move/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/home/nicholas/Documents/Rust/hyprhook-mouse-move/.envrc" "/home/nicholas/Documents/Rust/hyprhook-mouse-move/.direnv"/*.rc
